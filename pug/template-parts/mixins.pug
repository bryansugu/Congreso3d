mixin card(titlecard)
	.card
		.field.field--name-card-title 
			= titlecard
		.field.field--name-card-text
			block


// Modal
mixin modal-item(urlmodal,imgmodal)
	.modal.fade(id=urlmodal tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
		.modal-dialog(role="document")
			.modal-content
				.modal-header
					h5(class="modal-title" id="exampleModalLabel") Curso Pre Congreso
					button(type="button" class="close" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") 
							| &times;
				.modal-body
					img(src=imgmodal class="img-fluid")
